# Script de ejemplo para configurar el inventario con tus servidores
# Copia este archivo y modifica con tus datos reales

# LINUX SERVERS
export LINUX_SERVER_1_IP="192.168.1.100"
export LINUX_SERVER_1_USER="ansible"
export LINUX_SERVER_1_SSH_KEY="~/.ssh/id_ed25519"

# WINDOWS SERVERS
export WINDOWS_SERVER_1_IP="192.168.1.200"
export WINDOWS_SERVER_1_USER="Administrator"
export WINDOWS_SERVER_1_PASSWORD="your-secure-password"

# DATABASE SERVERS
export DB_SERVER_1_IP="192.168.1.300"
export DB_SERVER_1_USER="ansible"
export DB_SERVER_1_TYPE="postgresql"  # postgresql, mysql, mssql
export DB_SERVER_1_PORT="5432"
export DB_SERVER_1_DB_USER="ansible_monitor"
export DB_SERVER_1_DB_PASSWORD="db-password"

# API CONFIGURATION
export MONITORING_API_URL="http://localhost:8000/api/v1"

# Ansible Vault Password
export ANSIBLE_VAULT_PASSWORD="your-vault-password"

# NOTA: NO subas este archivo a git. Añádelo a .gitignore
