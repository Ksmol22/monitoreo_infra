{
  "dashboard": {
    "id": null,
    "uid": "infrastructure-overview",
    "title": "Infrastructure Monitoring Overview",
    "tags": ["infrastructure", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Total Systems by Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(systems_total) by (status)",
            "legendFormat": "{{status}}"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yaxes": [
          {"label": "requests/sec", "show": true},
          {"show": false}
        ]
      },
      {
        "id": 3,
        "title": "Ansible Playbook Execution Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "ansible_playbook_duration_seconds",
            "legendFormat": "{{playbook}}"
          }
        ],
        "yaxes": [
          {"label": "seconds", "show": true},
          {"show": false}
        ]
      },
      {
        "id": 4,
        "title": "Metrics Collected (Total)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(metrics_collected_total) by (system_type)",
            "legendFormat": "{{system_type}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "API Response Time (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yaxes": [
          {"label": "seconds", "show": true},
          {"show": false}
        ]
      },
      {
        "id": 6,
        "title": "Ansible Playbook Success Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(ansible_playbook_status{status='success'}[5m]) / rate(ansible_playbook_status[5m])",
            "legendFormat": "{{playbook}}"
          }
        ],
        "yaxes": [
          {"label": "success rate", "show": true, "min": 0, "max": 1},
          {"show": false}
        ]
      }
    ]
  }
}
