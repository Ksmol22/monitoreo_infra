PRINT '===== ESTADO BASES ====='
SELECT name, state_desc, recovery_model_desc FROM sys.databases;

PRINT '===== INSTANCIA ====='
SELECT @@SERVERNAME Server, SERVERPROPERTY('ProductVersion') Version;

PRINT '===== UPTIME ====='
SELECT sqlserver_start_time FROM sys.dm_os_sys_info;

PRINT '===== TAMANO BASES ====='
SELECT DB_NAME(database_id), SUM(size)*8/1024 Size_MB
FROM sys.master_files
GROUP BY database_id;

PRINT '===== MEMORIA ====='
SELECT total_physical_memory_kb/1024 TotalRAM_MB,
       sqlserver_committed_kb/1024 SQL_Used_MB
FROM sys.dm_os_sys_memory;

PRINT '===== SESIONES ====='
SELECT status, COUNT(*) FROM sys.dm_exec_sessions GROUP BY status;

PRINT '===== DISCOS ====='
EXEC xp_fixeddrives;

PRINT '===== SERVICIOS ====='
SELECT servicename, status_desc FROM sys.dm_server_services;


postgres 



\echo '===== ESTADO SERVIDOR ====='
SELECT version();
SELECT pg_postmaster_start_time(), now() - pg_postmaster_start_time() AS uptime;

\echo '===== TAMANO BASES ====='
SELECT datname, pg_size_pretty(pg_database_size(datname))
FROM pg_database
ORDER BY pg_database_size(datname) DESC;

\echo '===== TAMANO TOTAL CLUSTER ====='
SELECT pg_size_pretty(SUM(pg_database_size(datname))) FROM pg_database;

\echo '===== TABLESPACES ====='
SELECT spcname, pg_size_pretty(pg_tablespace_size(oid)) FROM pg_tablespace;

\echo '===== SESIONES ====='
SELECT state, COUNT(*) FROM pg_stat_activity GROUP BY state;

\echo '===== MEMORIA ====='
SHOW shared_buffers;
SHOW work_mem;
SHOW effective_cache_size;

